{
  "builders": [
    {
      "type": "vmware-iso",
      "boot_wait": "2m",
      "communicator": "winrm",
      "cpus": "{{user `cpus`}}",
      "disk_adapter_type": "lsisas1068",
      "disk_size": "{{user `main_os_disk_size`}}",
      "disk_additional_size": [
        "{{user `x_mirror_disk_size`}}",
        "{{user `builds_disk_size`}}"
      ],
      "disk_type_id": "{{user `disk_type_id`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./unattend-floppy-scripts/disable-screensaver.ps1",
        "./unattend-floppy-scripts/disable-winrm.ps1",
        "./unattend-floppy-scripts/remoting-for-ansible.ps1",
        "./unattend-floppy-scripts/microsoft-updates.bat",
        "./unattend-floppy-scripts/win-updates.ps1"
      ],
      "guest_os_type": "windows9srv-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `ram`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "virtualHW.version": "13"
      },
      "vmx_remove_ethernet_interfaces": true,
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant",
      "winrm_insecure": true,
      "winrm_use_ssl": true,
      "winrm_use_ntlm": true,
      "version": 14,
      "vm_name": "WindowsServer2019"
    },
    {
      "type": "virtualbox-iso",
      "boot_wait": "2m",
      "communicator": "winrm",
      "cpus": "{{user `cpus`}}",
      "disk_size": "{{user `main_os_disk_size`}}",
      "vboxmanage": [
        [ "createhd", "--format", "VMDK", "--filename", "x_mirror.vmdk", "--variant", "STREAM", "--size", "{{user `x_mirror_disk_size`}}" ],
        [ "createhd", "--format", "VMDK", "--filename", "builds.vmdk", "--variant", "STREAM", "--size", "{{user `builds_disk_size`}}" ],
        [ "storagectl", "{{.Name}}", "--name", "SATA Controller", "--add", "sata", "--controller", "IntelAHCI"],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "1", "--type", "hdd", "--medium", "x_mirror.vmdk" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "2", "--type", "hdd", "--medium", "builds.vmdk" ]
      ],
      "floppy_files": [
        "{{user `autounattend`}}",
        "./unattend-floppy-scripts/disable-screensaver.ps1",
        "./unattend-floppy-scripts/disable-winrm.ps1",
        "./unattend-floppy-scripts/remoting-for-ansible.ps1",
        "./unattend-floppy-scripts/microsoft-updates.bat",
        "./unattend-floppy-scripts/win-updates.ps1"
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "Windows2016_64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `ram`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant",
      "winrm_insecure": true,
      "winrm_use_ssl": true,
      "winrm_use_ntlm": true
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "{{ user `build_directory` }}/{{user `box_basename`}}.{{.Provider}}.box",
      "type": "vagrant",
      "vagrantfile_template": "ccdc-basebox-windows-server-2019.template"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "./scripts/install7z.bat",
        "./scripts/vm-guest-tools.bat",
        "./scripts/enable-rdp.bat"
      ],
      "type": "windows-shell"
    },
    {
      "scripts": [
        "./scripts/debloat-windows.ps1",
        "./scripts/private-network.ps1"
      ],
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "scripts": [
        "./scripts/set-winrm-automatic.bat",
        "./scripts/uac-enable.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/dis-updates.bat"
      ],
      "type": "windows-shell"
    },
    {
      "type": "powershell",
      "inline": "$drv = Get-WmiObject win32_volume -filter 'DriveLetter = \"D:\"'; $drv.DriveLetter = \"F:\" ; $drv.Put() | out-null"
    },
    {
      "type": "powershell",
      "inline": "Enable-PSRemoting -Force"
    },
    {
      "scripts": [
        "./scripts/compact.bat"
      ],
      "type": "windows-shell"
    }
  ],
  "variables": {
    "autounattend": "./answer_files/server-2019/Autounattend.xml",
    "main_os_disk_size": "40000",
    "x_mirror_disk_size": "150000",
    "builds_disk_size": "150000",
    "disk_type_id": "1",
    "cpus": "8",
    "ram": "4096",
    "headless": "false",
    "iso_checksum": "549bca46c055157291be6c22a3aaaed8330e78ef4382c99ee82c896426a1cee1",
    "iso_checksum_type": "sha256",
    "iso_url": "https://software-download.microsoft.com/download/pr/17763.737.190906-2324.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us_1.iso",
    "manually_download_iso_from": "https://www.microsoft.com/en-us/evalcenter/evaluate-windows-server-2019",
    "restart_timeout": "5m",
    "winrm_timeout": "6h"
  }
}

