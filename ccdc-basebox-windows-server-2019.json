{
  "builders": [
    {
      "type": "vmware-iso",
      "output_directory": "{{user `output_directory`}}",
      "boot_wait": "1s",
      "boot_command": [
        "<enter>","<wait>","<enter>",
        "<enter>","<wait>","<enter>",
        "<enter>","<wait>","<enter>",
        "<enter>","<wait>","<enter>",
        "<enter>","<wait>","<enter>",
        "<enter>"
      ],
      "communicator": "winrm",
      "cpus": "{{user `cpus`}}",
      "disk_adapter_type": "pvscsi",
      "disk_size": "{{user `main_os_disk_size`}}",
      "disk_additional_size": [
        "{{user `x_mirror_disk_size`}}",
        "{{user `builds_disk_size`}}"
      ],
      "disk_type_id": "{{user `disk_type_id`}}",
      "guest_os_type": "windows9srv-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `ram`}}",
      "shutdown_command": "G:/sysprep.bat",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900",
        "virtualHW.version": "13",
        "firmware": "efi",
        "ide0:1.devicetype": "cdrom-image",
        "ide0:1.filename": "{{user `autounattend_iso`}}",
        "ide0:1.present": "TRUE",
        "ide0:1.startConnected" :"TRUE"
      },
      "vmx_data_post": {
        "ide0:1.devicetype": "cdrom-image",
        "ide0:1.filename": "",
        "ide0:1.present": "FALSE",
        "ide0:1.startConnected" :"FALSE"
      },
      "vmx_remove_ethernet_interfaces": "{{ user `vmx_remove_ethernet_interfaces` }}",
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_password": "{{user `vagrant_user_final_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant",
      "winrm_insecure": true,
      "winrm_use_ssl": true,
      "winrm_use_ntlm": true,
      "version": 14,
      "network_adapter_type": "VMXNET3",
      "vm_name": "WindowsServer2019"
    },
    {
      "type": "virtualbox-iso",
      "output_directory": "{{user `output_directory`}}",
      "boot_wait": "30s",
      "communicator": "winrm",
      "cpus": "{{user `cpus`}}",
      "disk_size": "{{user `main_os_disk_size`}}",
      "hard_drive_interface": "sata",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--firmware", "EFI" ],
        [ "modifyvm", "{{.Name}}", "--clipboard-mode", "bidirectional" ],
        [ "modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga"] ,
        [ "modifyvm", "{{.Name}}", "--vram", "64" ],
        [ "modifyvm", "{{.Name}}", "--accelerate3d", "on" ],
        [ "createmedium", "disk", "--filename", "{{user `output_directory`}}/x_mirror-{{ timestamp }}.vdi", "--size", "{{user `x_mirror_disk_size`}}" ],
        [ "createmedium", "disk", "--filename", "{{user `output_directory`}}/builds-{{ timestamp }}.vdi", "--size", "{{user `builds_disk_size`}}" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "2", "--type", "hdd", "--mtype", "writethrough", "--medium", "{{user `output_directory`}}/x_mirror-{{ timestamp }}.vdi" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "3", "--type", "hdd", "--mtype", "writethrough", "--medium", "{{user `output_directory`}}/builds-{{ timestamp }}.vdi" ],
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "4", "--type", "dvddrive", "--medium", "{{user `autounattend_iso`}}" ]
      ],
      "vboxmanage_post": [
        [ "storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "4", "--medium", "emptydrive" ]
      ],
      "boot_command": [
          "fs0:\\EFI\\BOOT\\BOOTX64.efi",
          "<enter>",
          "<enter>",
          "<enter>",
          "<enter>",
          "<enter>",
          "<enter>"
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "Windows2019_64",
      "headless": "{{user `headless`}}",
      "iso_interface": "sata",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `ram`}}",
      "shutdown_command": "g:/sysprep.bat",
      "winrm_password": "{{user `vagrant_user_final_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant",
      "winrm_insecure": true,
      "winrm_use_ssl": true,
      "winrm_use_ntlm": true
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "{{ user `build_directory` }}/{{user `box_basename`}}.{{.Provider}}.box",
      "type": "vagrant",
      "vagrantfile_template": "ccdc-basebox-windows-server-2019.template"
    },
    [
      {
        "type": "vsphere",
        "host": "{{user `vmware_center_host`}}",
        "vm_name": "{{user `vmware_center_vm_name`}}",
        "cluster": "{{user `vmware_center_cluster_name`}}",
        "datacenter": "{{user `vmware_center_datacenter`}}",
        "esxi_host": "{{user `vmware_center_esxi_host`}}",
        "datastore": "{{user `vmware_center_datastore`}}",
        "disk_mode": "thin",
        "keep_input_artifact": true,
        "vm_network": "{{user `vmware_center_vm_network`}}",
        "vm_folder": "{{user `vmware_center_vm_folder`}}",
        "overwrite": true,
        "insecure": true,
        "username": "{{user `vmware_center_username`}}",
        "password": "{{user `vmware_center_password`}}"
      },
      {
        "type": "vsphere-template",
        "host": "{{user `vmware_center_host`}}",
        "insecure": true,
        "username": "{{user `vmware_center_username`}}",
        "password": "{{user `vmware_center_password`}}",
        "datacenter": "{{user `vmware_center_datacenter`}}",
        "folder": "/packer-templates/os/windows-2019"
      }
    ]
  ],
  "provisioners": [
    {
      "scripts": [
        "./scripts/install7z.bat",
        "./scripts/vm-guest-tools.bat"
      ],
      "type": "windows-shell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart",
      "pause_before": "15s"
    },
    {
      "scripts": [
        "./scripts/vm-guest-tools-cleanup.bat"
      ],
      "type": "windows-shell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart",
      "pause_before": "5s"
    },
    {
      "scripts": [
        "./scripts/enable-rdp.bat"
      ],
      "type": "windows-shell",
      "pause_before": "15s"
    },
    {
      "scripts": [
        "./scripts/debloat-windows.ps1",
        "./scripts/private-network.ps1"
      ],
      "type": "powershell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    },
    {
      "scripts": [
        "./scripts/set-winrm-automatic.bat",
        "./scripts/uac-enable.bat",
        "./scripts/compile-dotnet-assemblies.bat",
        "./scripts/dis-updates.bat"
      ],
      "type": "windows-shell"
    },
    {
      "type": "powershell",
      "scripts": [
        "./scripts/enable-psremoting.ps1",
        "./scripts/compact.ps1"
      ]
    }
  ],
  "variables": {
    "customise_for_buildmachine": "0",
    "autounattend": "./answer_files/server-2019/Autounattend.xml",
    "autounattend_iso":"{{env `AUTOUNATTEND_ISO`}}",
    "build_directory":"{{env `VAGRANT_OUTPUT`}}",
    "output_directory":"{{env `VAGRANT_OUTPUT`}}/packer-output",
    "main_os_disk_size": "80000",
    "x_mirror_disk_size": "150000",
    "builds_disk_size": "300000",
    "disk_type_id": "1",
    "cpus": "8",
    "ram": "4096",
    "headless": "false",
    "iso_checksum": "549bca46c055157291be6c22a3aaaed8330e78ef4382c99ee82c896426a1cee1",
    "iso_checksum_type": "sha256",
    "iso_url": "https://software-download.microsoft.com/download/pr/17763.737.190906-2324.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us_1.iso",
    "manually_download_iso_from": "https://www.microsoft.com/en-us/evalcenter/evaluate-windows-server-2019",
    "restart_timeout": "5m",
    "winrm_timeout": "6h",
    "vagrant_user_final_password": "{{env `VAGRANT_USER_FINAL_PASSWORD`}}",
    "vmware_center_host": "{{env `VMWARECENTER_HOST`}}",
    "vmware_center_vm_name": "{{env `VMWARECENTER_VM_NAME`}}",
    "vmware_center_cluster_name": "{{env `VMWARECENTER_CLUSTER_NAME`}}",
    "vmware_center_datacenter": "{{env `VMWARECENTER_DATACENTER`}}",
    "vmware_center_esxi_host": "{{env `VMWARECENTER_ESXI_HOST`}}",
    "vmware_center_datastore": "{{env `VMWARECENTER_DATASTORE`}}",
    "vmware_center_vm_network": "{{env `VMWARECENTER_VM_NETWORK`}}",
    "vmware_center_vm_folder": "{{env `VMWARECENTER_VM_FOLDER`}}",
    "vmware_center_username": "{{env `VMWARECENTER_USERNAME`}}",
    "vmware_center_password": "{{env `VMWARECENTER_PASSWORD`}}"
  },
  "sensitive-variables": [
    "vmware_center_password",
    "vagrant_user_final_password"
  ]
}

